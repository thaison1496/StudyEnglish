<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="180dp"
    android:background="@android:color/white"
    android:layout_height="180dp">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="120dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/img_icon_lesson"
    android:layout_marginTop="10dp"
     android:src="@drawable/item_grammar"
    android:layout_height="120dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/img_icon_lesson"
        android:layout_centerHorizontal="true"
        android:text="Ngữ Pháp"
        android:id="@+id/tv_title_lesson"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
</RelativeLayout>