<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:id="@+id/study_grammar"
       android:background="@color/Blue_Grey"
       android:layout_height="155dp">
       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_width="80dp"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:id="@+id/img_icon_lesson_as"
           android:layout_alignParentTop="true"
           android:layout_marginTop="20dp"
           android:src="@drawable/item_grammar"
           android:layout_height="80dp" />
       <TextView
           android:layout_width="match_parent"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:text="Ngữ Pháp"
           android:gravity="center"
           android:textColor="@android:color/white"
           android:id="@+id/tv_title_lesson_as"
           android:background="@color/blur_black"
           android:textSize="20dp"
           android:layout_marginTop="10dp"
           android:layout_height="30dp" />
   </RelativeLayout>
<GridView
    android:layout_below="@+id/study_grammar"
    android:layout_width="match_parent"
    android:id="@+id/grid_list_lesson"
    android:stretchMode="columnWidth"
    android:scrollbars="none"
    android:numColumns="2"
    android:layout_height="match_parent"></GridView>
</RelativeLayout>