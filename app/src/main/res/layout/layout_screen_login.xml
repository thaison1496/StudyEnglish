<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="#B2EBF2"
    android:layout_height="match_parent">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/text_input_account"
        android:paddingBottom="5dp"
      android:layout_alignParentTop="true"
        android:layout_marginTop="200dp"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:textColorHint="@color/color_gray"
            android:layout_marginRight="10dp"

            android:background="@drawable/border_background"
            android:id="@+id/edit_account"
            android:drawableLeft="@drawable/icon_account"
            android:layout_height="40dp" />
        <requestFocus></requestFocus>
    </android.support.design.widget.TextInputLayout>
  <android.support.design.widget.TextInputLayout
      android:layout_width="match_parent"
      android:layout_marginTop="15dp"
      android:paddingBottom="5dp"
      android:layout_below="@+id/text_input_account"
      android:layout_height="wrap_content"
      android:id="@+id/text_input_pass_word"
      >

      <EditText
          android:layout_width="match_parent"
          android:hint="Mật khẩu"
          android:paddingLeft="10dp"
          android:inputType="textPassword"
          android:layout_marginLeft="10dp"
          android:drawablePadding="5dp"
          android:textColorHint="@color/color_gray"
          android:layout_marginTop="20dp"
          android:layout_marginRight="10dp"
          android:drawableLeft="@drawable/icon_password"
          android:background="@drawable/border_background"
          android:layout_below="@+id/edit_account"
          android:id="@+id/edit_pass"
          android:layout_height="40dp" />

  </android.support.design.widget.TextInputLayout>
  <CheckBox
      android:layout_width="wrap_content"
      android:text="Duy trì đăng nhập"
      android:layout_below="@+id/text_input_pass_word"
      android:textColor="#4DB6AC"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="10dp"
      android:id="@+id/check_maintain_login"
      android:buttonTint="@color/color_toolbar"
      android:theme="@style/MyCustomCheckBox"
      android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Đăng Nhập"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_login"
        android:layout_marginLeft="80dp"
        android:background="@drawable/background_button"
        android:layout_below="@+id/check_maintain_login"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Đăng Kí"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_register"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/btn_login"
        android:layout_below="@+id/check_maintain_login"
        android:textColor="@android:color/white"
        android:background="@drawable/background_button"

        android:layout_height="wrap_content" />
</RelativeLayout>